<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/input_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bookings Management"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <!-- Filter Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_tab_inactive_dashboard"
            android:padding="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvAllBookings"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_tab_active_dashboard"
                android:text="All"
                android:textColor="@color/green_600"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvPendingBookings"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_tab_inactive_dashboard"
                android:text="@string/pending"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvConfirmedBookings"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_tab_inactive_dashboard"
                android:text="@string/confirmed"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvCancelledBookings"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_tab_inactive_dashboard"
                android:text="@string/cancelled"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Bookings List -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBookings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:nestedScrollingEnabled="false" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

