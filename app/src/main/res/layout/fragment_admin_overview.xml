<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/input_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Revenue Overview Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRevenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivDollar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_dollar"
                        android:tint="@color/text_primary"
                        android:contentDescription="@string/revenue_overview"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvRevenueTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/revenue_overview_with_dollar"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvRevenueAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs. 2,450,000"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_600"
                    android:layout_marginTop="12dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvRevenueLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_revenue_this_month"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/ivTrendingUp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_trending_up"
                        android:tint="@color/green_600"
                        android:contentDescription="@string/vs_last_month" />

                    <TextView
                        android:id="@+id/tvTrendPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+12.5%"
                        android:textColor="@color/green_600"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp" />

                    <TextView
                        android:id="@+id/tvTrendLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vs_last_month"
                        android:textColor="@color/gray_600"
                        android:textSize="12sp"
                        android:layout_marginStart="6dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Booking Statistics Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBookingStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvBookingStatsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/booking_statistics"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvBookingStatsSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/successful_bookings"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/tvBookingRatio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/2"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_600"
                        android:background="@drawable/bg_tab_active_dashboard"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBooking"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:progress="50"
                    android:progressTint="@color/green_600"
                    android:progressBackgroundTint="#E5E5E5"
                    android:secondaryProgress="100"
                    android:secondaryProgressTint="@color/yellow_600"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/tvConfirmed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/one_confirmed"
                        android:textColor="@color/green_600"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvPending"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/one_pending"
                        android:textColor="@color/yellow_600"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvCancelled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/zero_cancelled"
                        android:textColor="@color/red_600"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quick Actions Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardQuickActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvQuickActionsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_actions"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:rowCount="2"
                    android:columnOrderPreserved="false">

                    <Button
                        android:id="@+id/btnAddNewGround"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="@string/add_new_ground"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_margin="6dp"
                        android:minHeight="48dp"
                        android:textColor="@color/text_primary" />

                    <Button
                        android:id="@+id/btnViewReports"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="@string/view_reports"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_margin="6dp"
                        android:minHeight="48dp"
                        android:textColor="@color/text_primary" />

                    <Button
                        android:id="@+id/btnManageUsers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="@string/manage_users"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_margin="6dp"
                        android:minHeight="48dp"
                        android:textColor="@color/text_primary" />

                    <Button
                        android:id="@+id/btnSystemSettings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="@string/system_settings"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_margin="6dp"
                        android:minHeight="48dp"
                        android:textColor="@color/text_primary" />
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

